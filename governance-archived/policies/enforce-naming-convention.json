{
  "properties": {
    "displayName": "Enterprise - Enforce VM naming convention",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "This policy enforces Your Organization naming convention for virtual machines: [env]-vm-[app]-[region]-[###]",
    "metadata": {
      "version": "1.0.0",
      "category": "Compute",
      "source": "Your Organization Cloud Governance"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "defaultValue": "Audit"
      },
      "namingPattern": {
        "type": "String",
        "metadata": {
          "displayName": "Naming Pattern",
          "description": "Regex pattern for VM naming convention"
        },
        "defaultValue": "^(dev|uat|prod)-vm-[a-z0-9]+-[a-z]+-[0-9]{3}$"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines"
          },
          {
            "not": {
              "field": "name",
              "match": "[parameters('namingPattern')]"
            }
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
