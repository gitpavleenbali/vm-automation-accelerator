{
  "properties": {
    "displayName": "Enterprise - Require Azure Backup on VMs",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "This policy ensures that all production virtual machines are protected by Azure Backup.",
    "metadata": {
      "version": "1.0.0",
      "category": "Backup",
      "source": "Your Organization Cloud Governance"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": [
          "AuditIfNotExists",
          "Disabled"
        ],
        "defaultValue": "AuditIfNotExists"
      },
      "vaultLocation": {
        "type": "String",
        "metadata": {
          "displayName": "Recovery Services Vault Location",
          "description": "Location of the Recovery Services Vault",
          "strongType": "location"
        }
      },
      "excludedEnvironments": {
        "type": "Array",
        "metadata": {
          "displayName": "Excluded Environments",
          "description": "Environments to exclude from backup requirement"
        },
        "defaultValue": [
          "dev"
        ]
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines"
          },
          {
            "not": {
              "field": "tags['Environment']",
              "in": "[parameters('excludedEnvironments')]"
            }
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.RecoveryServices/backupprotecteditems",
          "existenceCondition": {
            "allOf": [
              {
                "field": "Microsoft.RecoveryServices/backupprotecteditems/friendlyName",
                "equals": "[field('name')]"
              },
              {
                "field": "Microsoft.RecoveryServices/backupprotecteditems/protectionState",
                "equals": "Protected"
              }
            ]
          }
        }
      }
    }
  }
}
