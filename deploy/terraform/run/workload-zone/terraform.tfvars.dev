###############################################################################
# Workload Zone - Development Environment Configuration  
# Creates network infrastructure for VM deployments
###############################################################################

# Environment configuration
environment      = "dev"
location        = "eastus"
project_code    = "vmaut"
workload_name   = "workloadzone"

# Naming configuration
instance_number = "01"

# Control plane configuration (for state management)
control_plane_subscription_id   = "37ffd444-46e0-41dd-9e4b-f12857262095"
control_plane_resource_group   = "rg-vmaut-controlplane-eus-shared"
control_plane_storage_account  = "stvmautcpsharedeus"
control_plane_container_name   = "tfstate"

# Network configuration
vnet_address_space = ["10.1.0.0/16"]

# Subnet configuration
subnets = {
  web = {
    name             = "snet-web"
    address_prefixes = ["10.1.1.0/24"]
    service_endpoints = ["Microsoft.Storage"]
  }
  app = {
    name             = "snet-app"
    address_prefixes = ["10.1.2.0/24"]
    service_endpoints = ["Microsoft.Storage", "Microsoft.KeyVault"]
  }
  data = {
    name             = "snet-data"
    address_prefixes = ["10.1.3.0/24"]
    service_endpoints = ["Microsoft.Storage", "Microsoft.KeyVault", "Microsoft.Sql"]
  }
  mgmt = {
    name             = "snet-mgmt"
    address_prefixes = ["10.1.10.0/24"]
    service_endpoints = ["Microsoft.Storage", "Microsoft.KeyVault"]
  }
}

# Network Security Groups
enable_network_security_groups = true
default_security_rules         = true

# Route table configuration
enable_route_tables = false  # Not needed for basic dev environment

# Network monitoring
enable_network_watcher = false  # Disabled for dev to reduce costs
enable_flow_logs      = false   # Disabled for dev

# NAT Gateway (for outbound internet access)
enable_nat_gateway = false  # Not needed for basic dev testing

# Private DNS zones
enable_private_dns_zones = false  # Simplified dev environment

# Monitoring and diagnostics
enable_diagnostic_settings = false  # Disabled for dev to reduce costs
log_retention_days         = 7      # Minimal retention for dev

# Tags
tags = {
  Environment   = "development"
  Project      = "vm-automation-accelerator"
  Component    = "network-infrastructure"
  Owner        = "platform-team"
  CostCenter   = "development"
  DeployedBy   = "terraform"
  Purpose      = "workload-networking"
}